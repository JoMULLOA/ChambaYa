<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <ImageView
        android:id="@+id/ivLogoPrincipal"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:src="@drawable/logo_principal"
        android:scaleType="fitCenter"
        android:layout_marginTop="16dp"
        android:contentDescription="@string/app_name"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Card de Perfil -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/tvUserProfile"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        android:visibility="gone"
        tools:visibility="visible"
        app:layout_constraintTop_toBottomOf="@id/ivLogoPrincipal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Título -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/my_profile"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/chambaya_blue"
                android:layout_marginBottom="16dp" />

            <!-- Imagen de Perfil con botón de cámara -->
            <FrameLayout
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:layout_marginBottom="16dp">

                <!-- Imagen de perfil -->
                <ImageView
                    android:id="@+id/ivProfileImage"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:background="@drawable/circle_profile"
                    android:scaleType="centerCrop"
                    android:src="@android:drawable/ic_menu_myplaces"
                    android:contentDescription="@string/user"
                    android:clipToOutline="true" />

                <!-- Botón de cámara -->
                <ImageView
                    android:id="@+id/ivEditPhoto"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_gravity="bottom|end"
                    android:background="@drawable/circle_camera_button"
                    android:padding="8dp"
                    android:src="@android:drawable/ic_menu_camera"
                    android:tint="@color/white"
                    android:contentDescription="Editar foto"
                    android:clickable="true"
                    android:focusable="true" />

            </FrameLayout>

            <!-- Nombre -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/name"
                android:textSize="12sp"
                android:textColor="@color/chambaya_blue"
                android:alpha="0.7"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/tvUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Juan Pérez"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginBottom="12dp" />

            <!-- Email -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/email"
                android:textSize="12sp"
                android:textColor="@color/chambaya_blue"
                android:alpha="0.7" />

            <TextView
                android:id="@+id/tvUserEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="juan.perez@example.com"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_marginBottom="16dp" />

            <!-- Billetera -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/wallet"
                android:textSize="12sp"
                android:textColor="@color/chambaya_blue"
                android:alpha="0.7" />

            <TextView
                android:id="@+id/tvUserWallet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="200.000 CLP"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_marginBottom="24dp" />

            <!-- Botón Mis Contrataciones -->
            <Button
                android:id="@+id/btnMyHires"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="@string/my_hires"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:backgroundTint="@color/chambaya_blue"
                app:cornerRadius="8dp"
                android:layout_marginBottom="8dp"/>

            <!-- Botón Cerrar Sesión -->
            <Button
                android:id="@+id/btnLogout"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="@string/logout"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:backgroundTint="@color/chambaya_blue"
                app:cornerRadius="8dp" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>
