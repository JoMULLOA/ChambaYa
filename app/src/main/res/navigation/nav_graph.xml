<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@id/jobListFragment">

    <fragment
        android:id="@+id/jobListFragment"
        android:name="com.example.chambaya.ui.JobListFragment"
        android:label="@string/nearby_jobs"
        tools:layout="@layout/fragment_job_list" />

    <fragment
        android:id="@+id/jobDetailFragment"
        android:name="com.example.chambaya.ui.JobDetailFragment"
        android:label="@string/job_details"
        tools:layout="@layout/fragment_job_detail" />

    <fragment
        android:id="@+id/jobMapFragment"
        android:name="com.example.chambaya.ui.JobMapFragment"
        android:label="@string/view_map"
        tools:layout="@layout/fragment_job_map" />

    <fragment
        android:id="@+id/publishFragment"
        android:name="com.example.chambaya.ui.PublishFragment"
        android:label="@string/publish"
        tools:layout="@layout/fragment_publish" />

    <fragment
        android:id="@+id/messagesFragment"
        android:name="com.example.chambaya.ui.MessagesFragment"
        android:label="Mensajes"
        tools:layout="@layout/fragment_messages" />

    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.chambaya.ui.ProfileFragment"
        android:label="Perfil"
        tools:layout="@layout/fragment_profile">
        <action
            android:id="@+id/action_profileFragment_to_myHiresFragment"
            app:destination="@id/myHiresFragment" />
    </fragment>

    <fragment
        android:id="@+id/myHiresFragment"
        android:name="com.example.chambaya.ui.MyHiresFragment"
        android:label="@string/my_hires"
        tools:layout="@layout/fragment_my_hires" />
</navigation>

